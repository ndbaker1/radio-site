{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "module": "UMD",
    "target": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "server.ts",
    "lib/**/*.ts",
    "lib/**/*.js",
  ],
}